{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"custom": false,
			"customGradient": false,
			"duotone": [],
			"defaultPalette": false,
			"defaultGradients": false,
			"gradients": [],
			"link": false,
			"palette": [
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "font",
					"color": "#040507",
					"name": "Font"
				},
				{
					"slug": "pink",
					"color": "#e71845",
					"name": "Pink"
				},
				{
					"slug": "yellow",
					"color": "#e1d636",
					"name": "Yellow"
				},
				{
					"slug": "dark",
					"color": "#040507",
					"name": "Dark"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			]
		},
		"spacing": {
			"padding": false,
			"margin": false,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
		"typography": {
			"dropCap": false,
			"lineHeight": true,
			"fontFamilies": [
				{
					"name": "Passion One",
					"slug": "passion-one",
					"fontFamily": "Passion One"
				},
				{
					"name": "Work Sans",
					"slug": "Work-sans",
					"fontFamily": "Work Sans"
				},
				{
					"name": "Paralucent",
					"slug": "paralucent",
					"fontFamily": "paralucent"
				}
			],
			"fontSizes":[
				{
					"slug": "extra-small",
					"size": "1rem",
					"name": "Extra small"
				},
				{
					"slug": "small",
					"size": "1.125rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL"
				},
				{
					"slug": "xx-large",
					"size": "3.75rem",
					"name": "XXL"
				}
			]
		},
		"custom": {
			"button-shadow": "0 8px 8px 0 rgba(0, 0, 0, 0.2)",
			"small-button-shadow": "0 1px 1px 0 rgba(0, 0, 0, 0.2)",
			"button-highlight": "0 0 0 #fff",
			"button-border-color": "rgba(0, 0, 0, 0.05)",
			"button-border-radius": "4px",
			"button-padding": ".3rem 1rem"
		}
	},
	"styles": {
		"blocks": {
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				}
			},
			"core/block": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}			
			},
			"core/paragraph": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "10px"
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--font)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--pink)"
				},
					"typography": {
						"textDecoration": "none",
						"textTransform": "uppercase",
						"fontSize": "var(--wp--preset--font-size--small)",
						"fontWeight": "700"
					},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--font)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--font)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--font)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--white)",
					"text": "var(--wp--preset--color--pink)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700",
					"textTransform": "uppercase"
				},
				"border": {
					"radius": "18px",
					"width": "3px",
					"style": "solid",
					"color": "#040507"
				},
				"shadow": "0 1px 1px 0 rgba(0, 0, 0, 0.2)",
				"spacing": {
						"padding": {
							"bottom": "5px",
							"top": "5px"
						},
						"margin": {
							"bottom": "10px"
						}
					},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--pink)",
						"background": "var(--wp--preset--color--white)"
					},
					"border": {
						"radius": "0"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--pink)",
						"background": "var(--wp--preset--color--white)"
					},
					"border": {
						"radius": "0"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--pink)",
						"background": "var(--wp--preset--color--white)"
					},
					"border": {
						"radius": "0"
					}
				}
			},
			"h1": {
				"color": {
					"text": "var(--wp--preset--color--pink)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--paralucent)",
					"fontSize": "var(--wp--preset--font-size--extra-large)"
				}
			},
			"h2": {
				"color": {
					"text": "var(--wp--preset--color--pink)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--passion-one)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"textTransform": "uppercase"
				}
			},
			"h3": {
				"color": {
					"text": "var(--wp--preset--color--font)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--passion-one)",
					"fontSize": "Medium",
					"textTransform": "uppercase"
				}
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--work-sans)",
			"lineHeight": "1"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		}
	]
}
